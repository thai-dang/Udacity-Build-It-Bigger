<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JokeDisplayActivity">

    <TextView
        android:id="@+id/joke_display_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/joke_activity_margin"
        android:layout_marginEnd="@dimen/joke_activity_margin"
        android:layout_marginLeft="@dimen/joke_activity_margin"
        android:layout_marginRight="@dimen/joke_activity_margin"
        android:layout_marginStart="@dimen/joke_activity_margin"
        android:layout_marginTop="@dimen/joke_activity_margin"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        tools:text="@string/joke_text" />
</android.support.constraint.ConstraintLayout>